<persistence version="1.0"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
     http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd
     http://java.sun.com/xml/ns/persistence/orm
     http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
	xmlns:orm="http://java.sun.com/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="bookingSystem" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<!-- <mapping-file>META-INF/orm.xml</mapping-file> -->
		
		<class>com.eddy.cribz.bookingSystem.model.User</class>
		<class>com.eddy.cribz.bookingSystem.model.Role</class>
		<class>com.eddy.cribz.bookingSystem.model.Permission</class>
		<class>com.eddy.cribz.bookingSystem.model.PasswordPolicy</class>
		<class>com.eddy.cribz.bookingSystem.model.Booking</class>
		<class>com.eddy.cribz.bookingSystem.model.Event</class>
		<properties>		
		    
		    <!-- MySql -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />

			<!-- SqlServer -->
			<!-- <property name="hibernate.dialect" value="com.eddy.cribz.bookingSystem.core.utils.CustomSQLServerDialect" 
				/> -->

			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>

	</persistence-unit>
</persistence>
